<p style="color: green"><%= notice %></p>

<% content_for :title, "Kittens" %>

<h1>Kittens</h1>
<% if @kittens.any? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Cuteness</th>
        <th>Softness</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @kittens.each do |kitten| %>
        <tr>
          <td><%= kitten.name %></td>
          <td><%= kitten.age %></td>
          <td><%= kitten.cuteness %></td>
          <td><%= kitten.softness %></td>
          <td>
            <%= link_to 'Show', kitten_path(kitten) %>
            <%= link_to 'Edit', edit_kitten_path(kitten) %>
            <%= link_to 'Delete', kitten_path(kitten), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No kittens found.</p>
<% end %>
<%= link_to 'New Kitten', new_kitten_path %>
